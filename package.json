{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "xkcd-password",
  "title": "XKCD Password Generator",
  "description": "Generate memorable passwords in XKCD style",
  "icon": "extension-icon.png",
  "author": "pavelryzhkov",
  "categories": [
    "Security",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "copy-random-xkcd-password",
      "title": "Copy Random XKCD Password",
      "description": "Generate and copy a random XKCD-style password",
      "mode": "no-view",
      "icon": "command-icon.png"
    },
    {
      "name": "show-xkcd-password-list",
      "title": "Show XKCD Password List",
      "description": "Show a list of generated XKCD-style passwords",
      "mode": "view",
      "icon": "command-icon.png"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.92.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "version": "1.0.0",
  "keywords": [
    "password",
    "generator",
    "security",
    "xkcd"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pavelryzhkov/raycast-xkcd-password"
  },
  "screenshots": [
    {
      "path": "1.png",
      "title": "Quick Copy Password"
    },
    {
      "path": "2.png",
      "title": "Password List View"
    },
    {
      "path": "3.png",
      "title": "Password Details"
    }
  ]
}